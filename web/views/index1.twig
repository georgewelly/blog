{% extends "layout.html" %}

{% block content %}
<div class="jumbotron text-center">
    <div class="container">
        <h1>George's Blog</h1>
        <p>This is a skeleton blog site written in PHP.</p>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Blog Posts:</h3>
            <ul>
                {% for post in posts %}
                <li><a href="/posts/{{post}}/">{{post}}</a></li>
                {% endfor %}
            </ul>
    </div>
  </div>
</div>
{% endblock %}
